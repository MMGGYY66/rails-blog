<main class='content container'>
  <ul>
    <li><%= render @user %></li>
    <li><%= render 'bio', user: @user %></li>
    <% @user.last_3_posts.each do |post| %>
      <li><%= render post %></li>
    <% end %>
  </ul>
  <div class="text-center d-flex justify-content-around">
    <%= link_to "Home", users_path, class: "button btn btn-danger" %>
    <%= link_to 'See all posts', @posts , class: 'btn btn-primary' %>
  </div>
</main>