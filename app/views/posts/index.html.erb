<main class='content container'>
  <h1>List of posts from <%= @user&.name %></h1>
  <ul>
    <li><%= render @user %></li>
    <% @posts.each do |post| %>
      <li><%= render post %></li>
      <% post.last_5_comments.each do |comment| %>
        <li><%= render 'comment', comment: comment %></li>
      <% end %>
    <% end %>
  </ul>
  <div class="text-center d-flex justify-content-around">
    <%= link_to "Home", users_path, class: "button btn btn-danger" %>
    
    <%= link_to "Pagination", user_path(@user), class: "button" %>  
  </div>
</main>